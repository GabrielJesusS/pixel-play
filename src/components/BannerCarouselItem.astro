---
import Button from "./common/Button.astro";
import PlatformItem from "./PlatformItem.astro";
import { PlatformEnum } from "../enum/PlatformEnum";

export interface IBannerCarouselItemProps {
  overline: string;
  title: string;
  description: string;
  platforms: PlatformEnum[];
  cartUrl: string;
  url: string;
  cover: string;
}

type Props = IBannerCarouselItemProps;

const { cartUrl, cover, description, overline, platforms, title, url } =
  Astro.props;
---

<div class="swiper-slide bg-accent relative">
  <div
    class="bg-basis-background xl:h-full w-full xl:w-1/3 paralelogram-after after:bg-basis-background after:size-full after:hidden after:xl:block after:absolute after:left-44 after:top-0 z-10 after:-z-10 absolute bottom-0 xl:inset-0 xl:-translate-x-full carousel-overview-content"
  >
    <div
      class="text-basis h-full w-full flex flex-col xl:ml-36 justify-center space-y-8 xl:space-y-16 p-6 xl:p-0"
    >
      <div class="">
        <p class="text-xl uppercase font-bold line-clamp-2">
          {overline}
        </p>
        <p class="text-4xl uppercase font-bold line-clamp-3">
          {title}
        </p>
        <p class="line-clamp-3">
          {description}
        </p>
      </div>
      <div class="flex items-center">
        <Button as="a" href={cartUrl}>Jogar agora</Button>
        <Button as="a" href={url} appearance="outlined">Ver mais</Button>
      </div>
      <div class="flex flex-col space-y-2">
        <small class="text-sm">Dispon√≠vel em:</small>
        <ul class="space-x-2 flex">
          {
            platforms.map((platform) => (
              <li>
                <PlatformItem platform={platform} />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
  <img
    src={cover}
    class="size-full object-cover object-left banner-carousel-cover"
    alt={title}
  />
</div>
